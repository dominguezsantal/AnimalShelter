@{
  Layout = "_Layout";
}

@using Inventory.Models;
@model List<Inventory.Models.Pet>;

<h1>Here are your pets</h1>

@if (@Model.Count == 0)
{
  <h3>No pets have been added yet!</h3>
} 

@foreach(Pet pet in Model)
{
  <li>@Html.ActionLink($"{pet.Name}", "Details", new { id = pet.PetId }) | @pet.petCollection.Name </li>
}

<p>@Html.ActionLink("Add new pet", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>